# BMI 뭐여 이건 크게 안 돼?? ㅡㅡ 아놔 
'''
#include <iostream>

int main() {
    float height, weight;

    std::cout << "키 입력 (cm): ";
    std::cin >> height;

    std::cout << "체중 입력 (kg): ";
    std::cin >> weight;

    // 키를 미터 단위로 변환
    float heightInMeter = height / 100.0;

    // BMI 계산
    float bmi = weight / (heightInMeter * heightInMeter);

    std::cout << "-----------------------\n";
    std::cout << "BMI = " << bmi << std::endl;

    if (bmi < 18.5) {
        std::cout << "저체중입니다." << std::endl;
    } else if (bmi >= 18.5 && bmi < 23) {
        std::cout << "정상체중입니다." << std::endl;
    } else if (bmi >= 23 && bmi < 25) {
        std::cout << "과체중입니다." << std::endl;
    } else if (bmi >= 25 && bmi < 30) {
        std::cout << "경도비만입니다." << std::endl;
    } else {
        std::cout << "고도비만입니다." << std::endl;
    }

    return 0;
}
'''


#include <iostream>
#include <cstring>
using namespace std;

int main()
{
    char password[11];
    cout<< "프로그램을종료하려면암호를입력하세요." << endl;
    while(true) {
        cout<< "암호>>";
        cin>> password;
        if( strcmp(password, "C++") == 0 ) {
            cout<< "프로그램을정상종료합니다." << endl;
            break;
            
        }else cout<< "암호가틀립니다." << endl;
    }
    
    
    return 0;
}
# time
#include <iostream>
using namespace std;

class ConvertSecond {
private:
    int hours, minutes, seconds;

public:
    ConvertSecond() : hours(0), minutes(0), seconds(0) {}

    void setData() {
        cout << "시(hour) 입력: ";
        cin >> hours;
        cout << "분(minute) 입력: ";
        cin >> minutes;
        cout << "초(second) 입력: ";
        cin >> seconds;
    }

    int getResult() {
        return hours * 3600 + minutes * 60 + seconds;
    }
};

int main() {
    ConvertSecond a;
    a.setData();
    cout << "입력하신 시간은 총 " << a.getResult() << " 초입니다." << endl;

    ConvertSecond b;
    cout << "기본 시간은 총 " << b.getResult() << " 초입니다." << endl;

    return 0;
}


오늘은말일세 ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ
#include <iostream>
#include <cmath>
using namespace std;

class Line {
public:
    int sx, sy;
    int ex, ey;
    
    void setTwoPoints() {
        cout << "시작점 좌표 정수 두 개를 입력하세요: ";
        cin >> sx >> sy;
        
        cout << "끝점 좌표 정수 두 개를 입력하세요: ";
        cin >> ex >> ey;
    }
    
    double getLineLength() {
        return sqrt(pow(ex - sx, 2) + pow(ey - sy, 2));
    }
};

int main() {
    Line myline;
    myline.setTwoPoints();
    
    cout << "myline의 길이는 " << myline.getLineLength() << " 입니다." << endl;
    
    return 0;
}

